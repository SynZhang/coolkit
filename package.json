{
  "name": "koolkit",
  "version": "0.0.7",
  "description": "",
  "main": "build/index.js",
  "module": "build/index.es.js",
  "typings": "build/index.d.ts",
  "sideEffects": false,
  "scripts": {
    "test": "jest",
    "doc": "typedoc",
    "start": "webpack --config webpack.config.js",
    "build": "rollup -c",
    "release": "standard-version",
    "release:pre": "npm run release -- --prerelease",
    "release:major": "npm run release -- --release-as major",
    "release:minor": "npm run release -- --release-as minor",
    "release:patch": "npm run release -- --release-as patch",
    "release:premajor": "npm run release:major -- --prerelease",
    "release:preminor": "npm run release:minor -- --prerelease",
    "release:prepatch": "npm run release:patch -- --prerelease",
    "postrelease": "git push && git push --tags --no-verify"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/SynZhang/koolkit.git"
  },
  "author": "Syn Zhang<zeyanzhang.china@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/SynZhang/koolkit/issues"
  },
  "homepage": "https://github.com/SynZhang/koolkit#readme",
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged --allow-empty"
    }
  },
  "devDependencies": {
    "@babel/core": "^7.8.6",
    "@babel/preset-env": "^7.8.6",
    "@babel/preset-typescript": "^7.8.3",
    "@rollup/plugin-typescript": "8.3.0",
    "@typescript-eslint/eslint-plugin": "^2.19.0",
    "@typescript-eslint/parser": "^2.19.0",
    "babel-jest": "^25.1.0",
    "clean-webpack-plugin": "^3.0.0",
    "eslint": "^6.8.0",
    "husky": "^4.2.1",
    "jest": "^25.1.0",
    "lint-staged": "^10.0.7",
    "prettier": "1.19.1",
    "rollup": "2.67.0",
    "standard-version": "^8.0.1",
    "ts-loader": "^6.2.1",
    "tslib": "2.3.1",
    "typedoc": "0.21.2",
    "typescript": "4.3.4",
    "webpack": "^4.41.6",
    "webpack-cli": "^3.3.11"
  },
  "lint-staged": {
    "*.{ts,js}": "eslint --fix",
    "*.{ts,js,css,md}": "prettier --write"
  },
  "prettier": {
    "semi": false
  }
}
