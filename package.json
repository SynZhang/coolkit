{
  "name": "koolkit",
  "version": "0.2.0",
  "description": "",
  "main": "build/index.cjs.js",
  "module": "build/index.es.js",
  "browser": "build/index.js",
  "typings": "build/index.d.ts",
  "exports": {
    ".": {
      "require": "./build/index.cjs.js",
      "import": "./build/index.es.js"
    }
  },
  "sideEffects": false,
  "scripts": {
    "test": "jest",
    "doc": "typedoc",
    "build": "rollup -c",
    "release": "standard-version",
    "release:pre": "npm run release -- --prerelease",
    "release:major": "npm run release -- --release-as major",
    "release:minor": "npm run release -- --release-as minor",
    "release:patch": "npm run release -- --release-as patch",
    "release:premajor": "npm run release:major -- --prerelease",
    "release:preminor": "npm run release:minor -- --prerelease",
    "release:prepatch": "npm run release:patch -- --prerelease",
    "postrelease": "git push && git push --tags --no-verify",
    "prepare": "husky install"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/SynZhang/koolkit.git"
  },
  "author": "Syn Zhang<zeyanzhang.china@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/SynZhang/koolkit/issues"
  },
  "homepage": "https://github.com/SynZhang/koolkit#readme",
  "keywords": [
    "javascript",
    "typescript",
    "utility"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged --allow-empty"
    }
  },
  "devDependencies": {
    "@babel/core": "^7.17.5",
    "@babel/preset-env": "^7.16.11",
    "@babel/preset-typescript": "^7.16.7",
    "@rollup/plugin-typescript": "^8.3.1",
    "@types/jest": "27.4.0",
    "@typescript-eslint/eslint-plugin": "^5.14.0",
    "@typescript-eslint/parser": "^5.14.0",
    "babel-jest": "^27.5.1",
    "eslint": "^8.11.0",
    "husky": "^7.0.4",
    "jest": "^27.5.1",
    "lint-staged": "^12.3.5",
    "prettier": "^2.5.1",
    "rollup": "^2.70.0",
    "rollup-plugin-terser": "7.0.2",
    "standard-version": "^9.3.2",
    "ts-loader": "^6.2.1",
    "tslib": "2.3.1",
    "typedoc": "^0.22.13",
    "typescript": "^4.6.2"
  },
  "lint-staged": {
    "*.{ts,js}": "eslint --fix",
    "*.{ts,js,css,md}": "prettier --write"
  },
  "prettier": {
    "semi": false
  }
}
