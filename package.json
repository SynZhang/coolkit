{
  "name": "koolkit",
  "version": "0.0.6",
  "description": "",
  "main": "build/index.js",
  "typings": "build/index.d.ts",
  "sideEffects": false,
  "scripts": {
    "test": "jest",
    "doc": "typedoc",
    "start": "webpack --config webpack.config.js",
    "release": "standard-version",
    "postrelease": "git push && git push --tags --no-verify",
    "version-tag:major": "npm run release -- --release-as major",
    "version-tag:minor": "npm run release -- --release-as minor",
    "version-tag:patch": "npm run release -- --release-as patch",
    "version-tag:premajor": "npm run version-tag:major -- --prerelease",
    "version-tag:preminor": "npm run version-tag:minor -- --prerelease",
    "version-tag:prepatch": "npm run version-tag:patch -- --prerelease",
    "version-tag:prerelease": "npm run release -- --prerelease"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/SynZhang/koolkit.git"
  },
  "author": "Syn Zhang<zeyanzhang.china@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/SynZhang/koolkit/issues"
  },
  "homepage": "https://github.com/SynZhang/koolkit#readme",
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged --allow-empty"
    }
  },
  "devDependencies": {
    "@babel/core": "^7.8.6",
    "@babel/preset-env": "^7.8.6",
    "@babel/preset-typescript": "^7.8.3",
    "@typescript-eslint/eslint-plugin": "^2.19.0",
    "@typescript-eslint/parser": "^2.19.0",
    "babel-jest": "^25.1.0",
    "clean-webpack-plugin": "^3.0.0",
    "eslint": "^6.8.0",
    "husky": "^4.2.1",
    "jest": "^25.1.0",
    "lint-staged": "^10.0.7",
    "prettier": "1.19.1",
    "standard-version": "^8.0.1",
    "ts-loader": "^6.2.1",
    "typedoc": "0.21.2",
    "typescript": "4.3.4",
    "webpack": "^4.41.6",
    "webpack-cli": "^3.3.11"
  },
  "lint-staged": {
    "*.{ts,js}": "eslint --fix",
    "*.{ts,js,css,md}": "prettier --write"
  },
  "prettier": {
    "semi": false
  }
}
